<h1 style="text-align: center; margin-bottom: 5%"> Edit Task </h1>
<% if !@task.nil? %>
    <% if @task.errors.any? %>
        <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    <% end %>
<% end %>



<%= form_for @task do |f| %>

    <table class="table table-striped table-dark table-hover table-bordered">
        <thead class="thead-light ">
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th>Completed</th>
            </tr>
        </thead>

        <tr>
            <td><%= f.text_field :title, {:class => 'form-control'} %></td>
            <td><%= f.text_area :body, {:class => 'form-control'} %></td>
            <td><%= f.check_box  :status %></td>
        </tr>
    </table>

    <%= f.submit "Update", disable_with: 'Updating...', :class => 'btn btn-primary' %>

<% end %>