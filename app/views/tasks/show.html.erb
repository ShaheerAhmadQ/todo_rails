<h1 style="text-align: center; margin-bottom: 5%"> Displaying Task </h1>

<table class="table table-striped table-dark table-hover table-bordered">
    <thead class="thead-light ">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Body</th>
            <th>Completed</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tr>
        <td><%= @task.id %></td>
        <td><%= @task.title %></td>
        <td><%= @task.body %></td>
        <td><%= @task.status %></td>
        <td><%= link_to "Edit", edit_task_path(@task) %></td>
        <td><%= link_to "Remove", @task, method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
</table>