<% if !@task.nil? %>
    <% if @task.errors.any? %>
        <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    <% end %>
<% end %>


<%= form_for :task, url: tasks_path do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %> <br><br>

    <%= f.label :body %>
    <%= f.text_field :body %> <br><br>

    <%= f.submit "Submit", disable_with: 'Submiting...' %>

<% end %>